<h2>Pamphlets</h2>

<div class="projects">

  <div class="grid">
    <section id="cards" class="pt-0">
           <div class="wrapper wrapper--big">
               <div class="card__container">
                       {%- for post in pagination.items -%}
					   
					   {% if post.data.pamphlet.p_pdf %}
					   
				       <div class="card__item cf">
				           <div class="card__image">
				               <a href="{{post.data.permalink}}">
				                   <div class="image">
				                       <img src="{{ post.data.pamphlet.p_image }}" alt="">
				                   </div>
				               </a>
				           </div>
				           <div class="card__content">
				               <a href="{{post.data.permalink}}">
				                   <h3 class="mb-sm">{{ post.data.pamphlet.p_title }}</h3>
				               </a>
				               <div class="card__excerpt">
								   <p>{{pamphlet.p_prose}}</p>
								   <p><a href="{{post.data.pamphlet.p_pdf}}">View pamphlet (PDF)</a> | <a href="{{post.data.permalink}}">View project</a></p>
				               </div>
				           </div>
				       </div>
					   
					   {% endif %}
					   
					   
                   {% endfor %}
               </div>
           </div>
       </section>
  </div>

</div>
